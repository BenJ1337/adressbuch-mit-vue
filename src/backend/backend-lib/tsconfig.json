{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declarationMap": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./dist",
        "composite": true
    },
    "exclude": [
        "*/**/node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ]
}